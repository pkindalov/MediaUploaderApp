<div class="container mt-5">
  <h1 class="mb-4 text-center">
    <i class="fas fa-video"></i> Гледане на видео: <%= @media_file.file %>
  </h1>

  <div class="video-player mb-4 d-flex justify-content-center" id="video-player">
    <video class="video-fluid" controls autoplay>
      <source src="<%= serve_media_file_path(file_path: "#{@user_folder_path}/#{@media_file.file}") %>" type="video/<%= File.extname(@media_file.file)[1..-1] == 'mov' ? 'quicktime' : File.extname(@media_file.file)[1..-1] %>">
      Your browser does not support the video tag.
    </video>
  </div>

<!--  <div class="text-center">-->
    <%#= link_to folder_media_files_path(@folder), class: 'btn btn-secondary' do %>
<!--      <i class="fas fa-arrow-left"></i> Назад-->
    <%# end %>
<!--  </div>-->
</div>

<style>
    .video-player video {
        max-height: 80vh; /* Задаване на максимална височина на 80% от височината на прозореца */
        width: auto; /* Автоматична ширина, за да се запазят пропорциите */
        height: auto; /* Автоматична височина, за да се запазят пропорциите */
    }
</style>

<script>
    window.onload = function() {
        const videoPlayer = document.getElementById("video-player");
        if (videoPlayer) {
            videoPlayer.scrollIntoView({ behavior: "smooth", block: "center" });
        }
    };
</script>
